<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/bg_color2"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Usia Anda!"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/text_color2"
        android:layout_marginTop="32dp"
        />
    <Button
        android:id="@+id/btnTanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PILIH TANGGAL LAHIR"
        android:textColor="@color/text_color2"
        android:backgroundTint="@color/bg_color1"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        />
    <TextView
        android:id="@+id/tvLabelTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tanggal terpilih:"
        android:textSize="18dp"
        android:textColor="@color/text_color1"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/1900"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/text_color2"
        android:layout_marginTop="2dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/tvLabelMenit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dalam menit:"
        android:textSize="18dp"
        android:textColor="@color/text_color1"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/tvMenit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="140,000,000"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/text_color2"
        android:layout_marginTop="2dp"
        android:paddingVertical="2dp"
        android:paddingHorizontal="12dp"
        android:background="@color/bg_color1"
        android:visibility="invisible"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/tvLabelJam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dalam jam:"
        android:textSize="18dp"
        android:textColor="@color/text_color1"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/tvJam"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="140,000,000"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/text_color2"
        android:layout_marginTop="2dp"
        android:paddingVertical="2dp"
        android:paddingHorizontal="12dp"
        android:background="@color/bg_color1"
        android:visibility="invisible"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/tvLabelHari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dalam hari:"
        android:textSize="18dp"
        android:textColor="@color/text_color1"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/tvHari"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="140,000,000"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/text_color2"
        android:layout_marginTop="2dp"
        android:paddingVertical="2dp"
        android:paddingHorizontal="12dp"
        android:background="@color/bg_color1"
        android:visibility="invisible"
        android:textAlignment="center"
        />
</LinearLayout>